<ul>
  {{#each tourneys}}
    {{#if attended}}
      {{!-- {{> cats/cat-block sleep=false}} --}}
      <li class="change-status" data-id="{{id}}" data-attended="{{attended}}">
        {{ name }}
      </li>
    {{/if}}
  {{/each}}
</ul>
<ul>
  {{#each tourneys}}
    {{#unless attended}}
      {{!-- {{> cats/cat-block sleep=false}} --}}
      <li class="change-status" data-id="{{id}}" data-attended="{{attended}}">
        {{ name }}
      </li>
    {{/unless}}
  {{/each}}
</ul>


<h2>Add a tournament you wish to attend!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Tournament Name:</label>
    <input type="text" id="tournament" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Already attended?</label><br>
    <input type="radio" name="attended" value="1" checked> Haven't attended!<br>
    <input type="radio" name="attended" value="0" checked> Attended!<br>
  </div>

  <button type="submit">Add Tournament</button>
</form>
